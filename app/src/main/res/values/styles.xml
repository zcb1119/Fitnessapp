<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础主题：白色背景 + 浅蓝色按钮 -->
    <style name="Theme.FitnessApp" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/light_blue_500</item> <!-- 浅蓝色按钮 -->
        <item name="android:windowBackground">@color/white</item> <!-- 白色背景 -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.LightBlue</item> <!-- 自定义按钮样式 -->
    </style>
    <style name="Theme.FitnessApp.NoActionBar" parent="Theme.FitnessApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.AppCompat.Button.LightBlue" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/light_blue_500</item> <!-- 浅蓝色背景 -->
        <item name="android:textColor">@android:color/white</item> <!-- 白色文字 -->
        <item name="android:paddingVertical">12dp</item> <!-- 垂直内边距 -->
        <item name="android:paddingHorizontal">16dp</item> <!-- 水平内边距 -->
        <item name="android:elevation">4dp</item> <!-- 阴影 -->
    </style>
</resources>