<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础主题 -->
    <style name="Theme.FitnessApp" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/purple_500</item> <!-- 紫色按钮色 -->
        <item name="android:windowBackground">@color/white</item> <!-- 白色背景 -->
    </style>

    <!-- 无 ActionBar 的主题（继承自基础主题） -->
    <style name="Theme.FitnessApp.NoActionBar" parent="Theme.FitnessApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>